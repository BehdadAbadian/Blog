@page
@model Presentation.Areas.Admin.Pages.ArticleManagement.IndexModel
@{
}


<div class="card">
    <div class="card-header">
        <h3 class="float-left">Article List</h3>
        <div class="float-right">
            <a class="btn btn-success" asp-page="./Create" asp-area="Admin">Add New</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Article Category</th>
                    <th>Status</th>
                    <th>CreationDate</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in Model.Articles)
                {
                    <tr>
                        <td>@article.Id</td>
                        <td>@article.Title</td>
                        <td>@article.ArticleCategory</td>
                        <td>
                            @if (article.IsDeleted)
                            {
                                <a class="btn btn-danger">-</a>
                            }
                            else
                            {
                                <a class="btn btn-success">-</a>
                            }
                        </td>
                        <td>@article.CreationDate</td>
                        <td>
                            <a class="btn btn-warning float-left mr-3" asp-page="./Edit" asp-route-id="@article.Id">Edit</a>
                            @if (article.IsDeleted)
                            {
                                <a class="btn btn-warning" asp-page-handler="Restore" asp-route-id="@article.Id">Activate</a>

                            }
                            else
                            {
                                <a class="btn btn-danger" asp-page-handler="Remove" asp-route-id="@article.Id">Remove</a>

                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>